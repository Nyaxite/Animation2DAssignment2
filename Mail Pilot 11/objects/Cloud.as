package objects{	import starling.display.Sprite;	import starling.display.Image;	import starling.core.Starling;		import flash.media.SoundChannel;	public class Cloud extends Sprite	{		private var dx:Number = 0;		private var dy:Number = 0;		private var image:Image;		private var channel:SoundChannel;				public function Cloud()		{			// Load our Cloud's image from our Texture Atlas			image = new Image(Assets.mpAtlas.getTexture("cloud"));						// set our Cloud's registration point to the center			image.pivotX = image.width * 0.5;			image.pivotY = image.height * 0.5;						// initial position of our Cloud			reset();						// display our Cloud on the stage			addChild(image);						// play thunder sound when cloud is first created			channel = Assets.thunder.play();		}				public function update():void		{			// move the Cloud down the screen with random drift			x += dx;			y += dy;						// check to see if the Cloud has left the screen			if (y > (Starling.current.nativeStage.stageHeight + image.height))			{				reset();			}		}				public function reset():void		{			// start the Cloud off the stage			y = -image.height;						// start the Cloud at a random location across the top			x = Math.random() * Starling.current.nativeStage.stageWidth;						// set our cloud speed and drift to random values			dy = (Math.random() * 3) + 4;			dx = (Math.random() * -2) + (Math.random() * 2);		}	}}