package managers{	import states.Play;		import objects.Cloud;		import starling.core.Starling;	import starling.display.DisplayObjectContainer;	public class CloudManager	{		public var clouds:Array;		private var numClouds:int = 4;		public function CloudManager(currentParent:DisplayObjectContainer)		{			var count:int = 0;			// create a new cloud array			clouds = new Array();			// add three clouds to the array			while (count < numClouds)			{				if (Math.random() < 0.05)				{					// add a new cloud to the cloud array					clouds.push(new Cloud());					// add a random cloud to the stage					currentParent.addChild(clouds[count]);					count++;				}			}		}		public function update():void		{			var len:int = clouds.length;			// update each cloud			for (var count:int=len-1; count >= 0; count--)			{				clouds[count].update();			}		}				public function destroy():void		{			clouds = null;		}	}}